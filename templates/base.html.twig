<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
        <title>{% block title %}{{ 'base.title'|trans }}{% endblock %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('build/images/favicon.ico') }}"/>
        {{ encore_entry_link_tags('app') }}
        {% block stylesheets %}{% endblock %}
    </head>
    <body class="sb-show-main">

        <div id="app"></div>

        {% block footer_scripts %}
            <script>
                window.flashMsg = '';
                {% for message in app.flashes('error') %}
                    window.flashMsg += "{{ message|e('js') }} ";
                {% endfor %}
                window.app_locale = "{{ app.request.locale }}";
                window.app_translations = {{ translation_dumper.dump(app.request.locale)|json_encode|raw }};
            </script>
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}

    </body>
</html>
